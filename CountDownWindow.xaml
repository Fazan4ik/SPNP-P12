<Window x:Class="SPNP_P12.CountDownWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SPNP_P12"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="CountDownWindow" Height="100" Width="300" Background="Tomato">
    <StackPanel Orientation="Vertical">
        <Label Content="Закрийте інше вікно" FontSize="10" HorizontalAlignment="Center" Margin="5 5 5 5"/>
        <ProgressBar x:Name="progressBar1" Height="25" Margin="5 5 5 5" Value="100"/>
    </StackPanel>
</Window>
